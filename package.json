{
  "name": "sulabug",
  "version": "0.0.0",
  "description": "Sulabug downloader",
  "author": "Marco Li <marco79423@gmail.com>",
  "scripts": {
    "dev": "electron-webpack dev",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "compile": "electron-webpack",
    "dist:win": "yarn compile && electron-builder --win",
